            "args": [
                "register",
                "microfrontend",
                "--microservice-id=devices-location",
                "--frontend-id=emi",
                "--setup-file=/Users/sebastianmolano/NebulaE/Projects/TPM/ms-devices-location/etc/mfe-setup.json",
