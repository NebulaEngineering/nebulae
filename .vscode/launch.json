            "cwd": "${workspaceFolder}",
            "args": [
                "compose-api",
                "production",
                "--api-type=NEBULAE_GATEWAY",
                "--api-repo=https://github.com/nebulae-tpm/gateway",
                "--api-id=gateway",
                "--output-dir=/tmp/nebulae/gateway/",
