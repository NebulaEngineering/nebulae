    "version": "0.2.0",
    "configurations": [    
        {
            "type": "node",
            "request": "launch",
            "name": "Compose ui PROD",
            "program": "${workspaceFolder}/bin/cli.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "compose-ui",
                "production",
                "--shell-type=FUSE2_ANGULAR",
                "--shell-repo=https://github.com/nebulae-tpm/emi",
                "--frontend-id=emi",
                "--output-dir=/tmp/nebulae/emi/",
                "--store-type=GCP_DATASTORE",
                "--gcp-service-account-token=/Users/sebastianmolano/NebulaE/Projects/TPM/infrastructure/deployment/gcp/tokens/gcloud-service-key.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Compose ui DEV",
            "program": "${workspaceFolder}/bin/cli.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "compose-ui",
                "development",
                "--shell-type=FUSE2_ANGULAR",
                "--shell-repo=https://github.com/nebulae-tpm/emi",
                "--frontend-id=emi",
                "--output-dir=/tmp/nebulae/emi",
                "--setup-file=/Users/sebastianmolano/NebulaE/Projects/TPM/ms-dashboard-devices/etc/mfe-setup.json",
