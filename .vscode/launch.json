            "cwd": "${workspaceFolder}",
            "args": [
                "register",
                "microapi",
                "--microservice-id=devices-location",
                "--api-id=gateway",
                "--setup-file=/Users/sebastianmolano/NebulaE/Projects/TPM/ms-dashboard-devices/etc/mapi-setup.json",
